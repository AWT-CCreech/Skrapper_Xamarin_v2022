<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:skrapper="clr-namespace:Skrapper" 
    xmlns:local="clr-namespace:Skrapper.Views"
    mc:Ignorable="d"
    x:DataType="skrapper:MainViewModel"
    x:Class="Skrapper.MainTabbedPage"
    SelectedTabColor="{StaticResource Tertiary}"
    UnselectedTabColor="#e6e6e6"
    BarTextColor="White">
    <TabbedPage.BindingContext>
        <skrapper:MainViewModel/>
    </TabbedPage.BindingContext>
    <TabbedPage.Children>
        <local:SkidPage 
            Title="SKID" 
            IconImageSource="icon_pallet"/>
        <local:ScanPage 
            Title="SCAN" 
            IconImageSource="icon_barcode"/>
        <local:HistoryPage 
            Title="HISTORY" 
            IconImageSource="icon_history"/>
        <local:SettingsPage 
            Title="SETTINGS" 
            IconImageSource="icon_settings"/>
    </TabbedPage.Children>
</TabbedPage>
