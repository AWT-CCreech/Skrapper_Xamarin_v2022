<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skrapper.Views.HistoryPage"
             xmlns:vm="clr-namespace:Skrapper"
             Visual="Material"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.BindingContext>
        <vm:HistoryViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".8*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".8*"/>
                <RowDefinition Height=".1*"/>
                <RowDefinition Height=".05*"/>
            </Grid.RowDefinitions>
            <ListView x:Name="lvHistory" x:DataType="vm:HistoryViewModel"
                      RefreshCommand="{Binding DoRefreshHistoryCommand}"
                      IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
                      HorizontalScrollBarVisibility="Always"
                      VerticalScrollBarVisibility="Always"
                      IsPullToRefreshEnabled="True"
                      BackgroundColor="LightGray"
                      SelectionMode="Single"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Grid.Row="0"
                      Margin="10,5,10,5">
                      <!--ItemsSource="{Binding Path=ScanHistory, Mode=TwoWay}"
                      SeparatorColor="{DynamicResource NavigationBarColor}" 
                      SelectedItem="{Binding SelectedScan, Mode=TwoWay}" -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Grid.Row="0"
                                  Grid.Column="0"/>
                        <!-- Text="{Binding PartNum, StringFormat='P/N: {0}'}"
                             Detail="{Binding SerialNumber, StringFormat='S/N: {0}'}"-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Entry Placeholder="(Add Note)"
                   ClearButtonVisibility="WhileEditing"
                   Grid.Column="0"
                   Grid.ColumnSpan="1"
                   Grid.Row="1"
                   Margin="10,0,10,0"/>

            <Button Text="+"
                    Command="{Binding AddNoteCommand}"
                    FontAttributes="Bold"
                    FontSize="24"
                    CornerRadius="5"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Grid.Row="1"
                    VerticalOptions="Center"
                    Margin="0,0,10,0"/>

            <Label Text="count: x"
                   FontSize="15" FontAttributes="Bold" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="2"
                   Grid.Row="2" 
                   VerticalOptions="EndAndExpand"
                   HorizontalOptions="CenterAndExpand" 
                   Margin="0,0,0,3"/>
            <!--Text="{Binding ScanCountString, Mode=TwoWay}"-->
        </Grid>
    </ContentPage.Content>
</ContentPage>